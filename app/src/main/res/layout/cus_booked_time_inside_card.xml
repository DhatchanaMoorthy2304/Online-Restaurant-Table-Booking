<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cus_booked_time_inside_card_view"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#CED3E6"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1517B5"
                app:cardCornerRadius="5dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seats"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:textColor="#FA1A0A"
                    android:textSize="21sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:cardBackgroundColor="@color/pink"
                app:cardCornerRadius="5dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">
                <LinearLayout
                    android:background="@color/white"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/navigat_time_slot"
                        />
                    <TextView
                        android:id="@+id/cus_booked_time_inside_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9:00-10:00"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/quantum_googred"
                        android:textSize="20sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1517B5"
                app:cardCornerRadius="5dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">
                <TextView
                    android:id="@+id/cus_booked_time_inside_seats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="98"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:textColor="@color/places_autocomplete_prediction_primary_text"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:cardBackgroundColor="@color/pink"
                app:cardCornerRadius="5dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">
                <TextView
                    android:id="@+id/cus_booked_time_inside_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="09-09-2020"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="@color/quantum_googred"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#AE0808"
                app:cardCornerRadius="5dp"
                app:contentPadding="2dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp">
                <TextView
                    android:id="@+id/cus_booked_time_inside_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not finished"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:textColor="@color/places_autocomplete_prediction_primary_text"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>