<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#8193D5"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lbslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#CFCCCC"
                        app:cardCornerRadius="6dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/cus_home_rest_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chetti Nadu Resaurant!"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="#FB0303"
                            android:textSize="20sp"/>
                    </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/cus_home_rest_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginEnd="10sp"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/option_icon"
                        android:layout_marginRight="10sp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#CFCCCC"
                        android:layout_gravity="start"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:background="@drawable/restaurant_icon"
                            android:layout_marginLeft="10sp"

                            />
                        <TextView
                            android:id="@+id/cus_home_rest_cat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegetrain"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="#FB0303"
                            android:textSize="20sp"/>
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#CFCCCC"
                        android:layout_gravity="end"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:background="@drawable/phone_icon"
                            android:layout_marginLeft="10sp"/>
                        <TextView
                            android:id="@+id/cus_home_rest_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9876543210"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="#360A83"
                            android:textSize="22sp" />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#CFCCCC"
                        android:layout_gravity="start"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:background="@drawable/mail_icon"
                            android:layout_marginLeft="10sp"

                            />
                        <TextView
                            android:id="@+id/cus_home_rest_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="massssss@gmail.com"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="#360A83"
                            android:textSize="20sp" />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#CFCCCC"
                        android:layout_gravity="start"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="true">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginStart="10sp"
                            android:layout_gravity="center"
                            android:background="@drawable/location_icon"
                            android:layout_marginLeft="10sp" />
                        <TextView
                            android:id="@+id/cus_home_rest_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12, Raja street, kinathukadavu, kinathukadavu, Coimbatore, Tamil Nadu, 642109"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="#FB0303"
                            android:textSize="20sp" />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="#EDEDED">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Available Seats"
                                    android:padding="5dp"
                                    android:textColor="#F44336"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#F6E3AB"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">
                                <TextView
                                    android:id="@+id/cus_home_rest_avail_seats"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="98"
                                    android:padding="5dp"
                                    android:textColor="#201337"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Seats"
                                    android:padding="5dp"
                                    android:textColor="#F44336"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#98F19B"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">
                                <TextView
                                    android:id="@+id/cus_home_rest_total_seats"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="198"
                                    android:padding="5dp"
                                    android:textColor="#201337"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>