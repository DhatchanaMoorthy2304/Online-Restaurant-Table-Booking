<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant_Home">
    <LinearLayout
        android:id="@+id/restaurant_home_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp">
        <RelativeLayout
            android:id="@+id/restaurant_home_rell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backpress"
                android:layout_centerVertical="true"
                android:background="@drawable/back_icon"/>
            <TextView
                android:id="@+id/restaurant_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="Hi, Hotel!"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/restaurant_home_lin3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/restaurant_home_card_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/restaurant_home_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FDFBF1"
                    android:onClick="stock"
                    android:textColor="#000"
                    android:text="@string/stock"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/restaurant_home_card_add_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/restaurant_home_add_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:onClick="add_food"
                    android:textColor="#000"
                    android:text="@string/add_food"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/restaurant_home_lin4"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_home_rel"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FDFBF1"
                    android:onClick="stock"
                    android:text="@string/food_id"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:id="@+id/restaurant_home_update_food_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:onClick="add_food"
                    android:text="@string/food_id"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FDFBF1"
                    android:onClick="stock"
                    android:text="@string/food_name"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:cardBackgroundColor="#000"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:id="@+id/restaurant_home_update_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:onClick="add_food"
                    android:text="@string/food_name"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="3dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="@string/food_price"
                android:textColorHint="#000"
                app:boxBackgroundColor="#FDFBF1"
                app:boxStrokeColor="#000"
                app:boxStrokeWidthFocused="5dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_home_update_food_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="3dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="@string/food_quantity"
                android:textColorHint="#000"
                app:boxBackgroundColor="#FDFBF1"
                app:boxStrokeColor="#000"
                app:boxStrokeWidthFocused="5dp"
                app:endIconMode="clear_text"
                app:endIconTint="#000"
                app:hintTextColor="#000"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_home_update_food_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="20" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="3dp">

            <Button
                android:id="@+id/restaurant_home_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:fontFamily="@font/aclonica"
                android:text="@string/update"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/restaurant_home_lin2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_home_rel"
        android:layout_above="@id/restaurant_home_navigat">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/restaurant_home_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingTop="3dp"
                    android:background="@color/white"
                    android:hint="@string/category"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="2dp"
                    app:boxStrokeColor="#000" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/food_id"
                    android:background="#fff"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="5dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_home_food_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="2"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/food_name"
                    android:background="#fff"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="5dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_home_food_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLength="20"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/food_price"
                    android:background="#fff"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="5dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_home_food_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:contentPadding="3dp"
                app:cardUseCompatPadding="true">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/food_quantity"
                    android:background="#fff"
                    app:startIconTint="#000"
                    app:hintTextColor="#000"
                    android:textColorHint="#000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000"
                    app:boxStrokeWidthFocused="5dp"
                    app:boxStrokeColor="#000"
                    app:boxBackgroundColor="#FDFBF1">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/restaurant_home_food_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:id="@+id/restaurant_home_food_choose_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/choose_photo"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">
                <ImageView
                    android:id="@+id/restaurant_home_food_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:id="@+id/restaurant_home_food_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/submit"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/restaurant_home_lin1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/restaurant_home_rel"
        android:layout_above="@id/restaurant_home_navigat"
        android:orientation="vertical"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="3dp">
            <android.widget.SearchView
                android:id="@+id/restaurant_home_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5sp" />
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/restaurant_home_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/restaurant_home_rel_empty"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/restaurant_home_rel"
        android:layout_above="@id/restaurant_home_navigat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FDFBF1"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="3dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:fontFamily="@font/aclonica"
                    android:text="Food Stock is empty"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:text="Please click on 'ADD FOOD' to add a food"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/restaurant_home_navigat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/qq"
        app:itemIconTint="#281150"
        app:itemTextColor="#FD1403"
        app:menu="@menu/rest_menu_navigat" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>